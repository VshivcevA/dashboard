{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "Bundler",
      //for openapi-typescript
      "noUncheckedIndexedAccess": true,
      //for openapi-typescript
      "skipLibCheck": true,
      "maxNodeModuleJsDepth": 0,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
